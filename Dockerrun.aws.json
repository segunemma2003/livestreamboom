{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "web",
      "image": "934155604952.dkr.ecr.us-east-1.amazonaws.com/livestream-service:latest",
      "essential": true,
      "memory": 4096,
      "cpu": 2048,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DEBUG",
          "value": "False"
        },
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "livestream_project.settings_production"
        },
        {
          "name": "PYTHONPATH",
          "value": "/app"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health/ || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/elasticbeanstalk/livestream-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "web",
          "awslogs-create-group": "true"
        }
      },
      "mountPoints": [
        {
          "sourceVolume": "recordings",
          "containerPath": "/var/recordings"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "recordings",
      "host": {
        "sourcePath": "/var/recordings"
      }
    }
  ]
}
